<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:orientation="vertical"
        tools:context=".CourseActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/pt_dusky"
            android:gravity="center"
            android:padding="20sp"
            android:text="كورس مضاعفة حرق الدهون"
            android:textColor="#FF7369"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/person" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/pt_dusky"
            android:gravity="center"
            android:padding="20sp"
            android:text="@string/_250_300_gori"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDrugsNames"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:fontFamily="@font/pt_dusky"
            android:gravity="center"
            android:text="جوري GORI كبسولة شقية لسد الشهية \nريجفي REGI-V كبسولة مضافة لحرق الدهون"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="255dp"
            android:scaleType="fitCenter"
            android:src="@drawable/drug" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="37dp"
            android:fontFamily="@font/pt_dusky"
            android:gravity="center"
            android:text="مع إمكانية المتابعة أونلاين مع أخصائي تغذية علاجية .. مجانا!"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvCallUs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="37dp"
            android:fontFamily="@font/pt_dusky"
            android:gravity="center"
            android:text="لمعلومات أكثر ... إتصل بنا"
            android:textSize="20sp"
            android:textStyle="bold" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGet"
            android:layout_width="260dp"
            android:layout_height="66dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:backgroundTint="#93683F"
            android:fontFamily="@font/pt_dusky"
            android:text="إطلب كورس التخسيس الان"
            android:textColor="#fff"
            android:textSize="18sp"
            app:cornerRadius="33dp" />


    </LinearLayout>
</ScrollView>